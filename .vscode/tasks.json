{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "转换 pyUI",
            "type": "shell",
            "command": "pyuic5 ${file} -o ${workspaceFolder}\\windo\\ui_init\\${fileBasenameNoExtension}.py"
        },

        {
            "label": "调试 PyUI",
            "type": "shell",
            "command": "pyuic5 ${file} -o ${workspaceFolder}\\windo\\ui_init\\ex_${fileBasenameNoExtension}.py -x"
        },

        {
            "label": "转换 pyRC",
            "type": "shell",
            "command": "pyrcc5 ${file} -o ${workspaceFolder}\\windo\\ui_init\\${fileBasenameNoExtension}_rc.py",
        }
    ]
}